                <div class="tab">
                    <button class="tablinks" onclick="openCity(event, 'Plantillas')">Plantillas</button>
                    <button class="tablinks" onclick="openCity(event, 'Herramientas')">Herramientas</button>
                    <button class="tablinks" onclick="openCity(event, 'Envio')">Envio</button>
                </div>
                <!-- Tab content -->
