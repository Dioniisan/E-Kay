@page
@model IndexModel
@{
    ViewData["Title"] = "Inicie Sesion";
}

<div class="bg-image"></div>

<div class="d-flex justify-content-center centrado">
    <div class="shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card" style="width: 30rem">
            <img src="~/Images/placeholder-e-kay.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <center>
                    <h2 class="card-title">Iniciar Sesion</h2>
                </center>
                <form id="InicioSesion" class="d-flex justify-content-center">
                    <div class="d-flex justify-content-center" style="width: 28rem;">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <div class="form-group">
                                    <input type="text" name="Correo" class="form-control" role="textbox" placeholder="Correo">
                                </div>
                                <div class="form-group d-flex justify-content-center">
                                    <input type="password" name="Pass" class="form-control" role="textbox" placeholder="Contraseña">
                                </div>
                                <br />
                                <div class="d-flex justify-content-start">
                                    <input type="radio" id="recuerdame" />
                                    <label for="recuerdame">Recordarme</label>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-danger m-1">Iniciar Sesion</button>
                                </div>

                            </li>
                        </ul>
                    </div>
                </form> 
                <div class="d-flex justify-content-end">
                    <a asp-page="#">¿Contraseña olvidada?</a>
                </div>
            </div>
        </div>
    </div>
</div>
